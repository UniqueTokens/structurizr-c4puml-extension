System_Ext(1, "Software System 0", "Description 0", "")
System(2, "Software System 1", "", "android-icon", $link="https://www.android.com")
package "My Enterprise" {
  SetPropertyHeader("Property", "Value")
  AddProperty("prop key0", "prop value0")
  AddProperty("prop key1", "prop value1")
  AddProperty("prop key2", "prop value2")
  System(4, "Software System 2", "Description 2", "docker-icon", $link="https://www.docker.com/")
}
Rel_D(6, 1, "deletes", "gRPC")
Rel_D(6, 2, "creates", "HTTP")
